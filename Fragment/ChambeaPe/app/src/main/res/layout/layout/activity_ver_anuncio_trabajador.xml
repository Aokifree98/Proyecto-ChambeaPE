<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.VerAnuncioTrabajador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="#2EA2BE">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imgViewTra"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    tools:srcCompat="@tools:sample/avatars"
                    ></ImageView>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_starwhite"
                    ></ImageView>
                <TextView
                    android:id="@+id/txtPunTra"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="32sp"
                    android:gravity="center"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txtTra"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Nombre de trabajador"
                    android:textSize="25sp"
                    android:gravity="center"
                    android:background="#2EA2BE"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="0dp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtTraTit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Titulo de trabajador"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="0dp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtTraDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n del trabajador"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="0dp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtTraCiu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Ciudad del trabajador"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="0dp"
                    ></TextView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#2EA2BE"
        >
        <TextView
            android:id="@+id/txtTraHab"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="HABILIDADES"
            android:textSize="25sp"
            android:gravity="center"
            android:background="#2EA2BE"
            android:textColor="@color/white"
            android:layout_marginHorizontal="0dp"
            ></TextView>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
    <TextView
        android:id="@+id/txtTraIma"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="IMAGENES"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#2EA2BE"
        android:layout_marginHorizontal="0dp"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_img"
            ></ImageView>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_img"
            ></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnCan"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="CANCELAR"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/botonredondeado"
            android:layout_marginVertical="10dp"
            ></Button>
        <Button
            android:id="@+id/btnAct"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:text="ACTUALIZAR"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/botonredondeado"
            android:layout_marginVertical="10dp"
            ></Button>
    </LinearLayout>
    <Button
        android:id="@+id/btnQui"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Quitar"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/botonredondeado"
        android:layout_marginVertical="10dp"
        ></Button>
</LinearLayout>