<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ConcluirOferta"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="ASIGNAR ENCARGADO"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spEncargadoCO"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:spinnerMode="dialog"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/primaryColor"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="COMENTARIO"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edtComentarioCO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:hint="Deje su comentario aqui"
        android:inputType="textLongMessage|textMultiLine"
        android:padding="10dp"
        android:textColor="@color/primaryColor"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:text="CALIFICAR"
        android:textColor="@color/primaryColor"
        android:textSize="18sp"
        android:textStyle="bold" />
    <Spinner
        android:id="@+id/spCalificacionCO"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:spinnerMode="dialog"
        android:layout_marginStart="32dp"
        android:entries="@array/Calificaciones"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/primaryColor"
        />
    <Button
        android:id="@+id/btnTerminarCO"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/btnredondeado"
        android:textColor="@color/white"
        android:text="Terminar" />
</LinearLayout>