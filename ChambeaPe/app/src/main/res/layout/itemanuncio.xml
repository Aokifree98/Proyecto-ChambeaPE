<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="25dp"
    app:cardBackgroundColor="@color/primaryColor"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="20dp">

        <TextView
            android:id="@+id/txtIdPubAnun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="2sp"
            android:textColor="@color/primaryColor" />
        <TextView
            android:id="@+id/txtIdAnun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="0sp"
            android:textColor="@color/primaryColor" />

        <TextView
            android:id="@+id/txtDescripcionAnun1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="0sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"
            android:gravity="center" />

        <TextView
            android:id="@+id/txtDescripcionAnun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Titulo anuncio"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"
            android:gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="2dp"
            android:paddingHorizontal="20dp"
            android:textColor="@color/white"
            android:background="@drawable/btnredondeado3">
                <TextView
                    android:id="@+id/txtHabilidad1"
                    android:text="Habilidad 1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/txtHabilidad2"
                    android:text="Habilidad 2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/white"
                    android:id="@+id/txtHabilidad3"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="Habilidad 3"
                    android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtEstadoAnun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Estado"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFechaAnun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:foregroundGravity="center_vertical"
            android:text="Fecha de publicaciÃ³n"
            android:gravity="center" />
    </LinearLayout>

</androidx.cardview.widget.CardView>