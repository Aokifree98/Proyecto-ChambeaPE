<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CrearUsuario">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="Crear Cuenta"
                android:textColor="@color/primaryColor"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCUNombres"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/edtCUApellidoPat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Apellido paterno"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/edtCUApellidoMat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Apellido materno"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Naciemiento"
                        android:textColor="@color/primaryColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtCUFechaNacimiento"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="yyyy/mm/dd"
                            android:inputType="datetime"
                            android:textColor="@color/primaryDarkColor"
                            android:textColorHint="@color/primaryDarkColor" />

                        <ImageButton
                            android:id="@+id/btnCUCalendario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="Ingresar para elegir fecha"
                            android:onClick="openDatePicker"
                            app:srcCompat="@drawable/ic_calendar" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Género"
                        android:textColor="@color/primaryColor" />

                    <Spinner
                        android:id="@+id/spCUGenero"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:entries="@array/genero"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:textColor="@color/primaryColor"
                        android:textSize="20dp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:text="Tipo de documento"
                android:textColor="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spCUTipoID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/primaryColor"
                    android:contentDescription="Seleccionar Tipo de ID"
                    android:entries="@array/tipoDocumento"
                    android:textColor="@color/primaryColor" />

                <EditText
                    android:id="@+id/edtCUTipoID"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Documento de identidad"
                    android:inputType="number"
                    android:textColor="@color/primaryDarkColor"
                    android:textColorHint="@color/primaryDarkColor" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtCUClave"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="@color/primaryDarkColor" />

            <EditText
                android:id="@+id/edtCUCelular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Celular"
                android:inputType="phone"
                android:padding="8dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/edtCUMail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Correo electronico"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/edtCUDireccion"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Domicilio"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textColor="@color/primaryDarkColor"
                android:textColorHint="@color/primaryColor" />


            <Button
                android:id="@+id/btnCURegistrar"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnredondeado"
                android:text="Registrar"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnCURegGoogle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btnredondeado2"
                android:drawableStart="@drawable/google"
                android:drawablePadding="10dp"
                android:onClick="registrar_google"
                android:padding="20dp"
                android:text="Registrar con Google"
                android:textColor="@color/primaryColor"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtCUIngresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ya tiene una cuenta? Ingresar"
                android:textAlignment="center"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>