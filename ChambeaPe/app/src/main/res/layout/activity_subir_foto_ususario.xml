<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SubirFotoUsusario">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Subir foto de perfil"
            android:textSize="20sp"
            android:gravity="center"
            android:background="#2EA2BE"
            android:textColor="@color/white"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="50dp"
            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SUBE UNA FOTO DE TI"
            android:textSize="20sp"
            android:textColor="@color/primaryColor"
            android:gravity="center"
            android:layout_marginHorizontal="0dp"
            android:layout_marginBottom="50dp"
            ></TextView>
        <ImageButton
            android:id="@+id/imgFotoPU"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitCenter"
            android:layout_marginVertical="20dp"
            ></ImageButton>
        <Button
            android:id="@+id/btnSubirFotoPU"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="BUSCAR FOTO"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/btnredondeado"
            android:layout_marginVertical="10dp"
            ></Button>

        <Button
            android:id="@+id/btnRegistrarPU"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ACEPTAR"
            android:textColor="@color/white"
            android:layout_marginHorizontal="50dp"
            android:background="@drawable/btnredondeado"
            android:layout_marginVertical="10dp"
            ></Button>
    </LinearLayout>
</LinearLayout>