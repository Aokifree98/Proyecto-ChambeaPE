<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.EditarMiAnuncioOferta">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="EDITAR OFERTA DE TRABAJO"
        android:background="@color/primaryColor"
        app:titleTextColor="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:text="TIPO SERVICIO"
                android:textColor="@color/primaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spServicioEAO"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primaryColor"
                android:entries="@array/CategoriaServicio"
                android:textColor="@color/primaryColor" />

            <EditText
                android:id="@+id/edtTituloEAO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_titulo_anuncio_oferta"
                android:ems="10"
                android:hint="Titulo de la Oferta"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/primaryColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtDireccionEAO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_direccion_anuncio_oferta"
                android:ems="10"
                android:hint="DirecciÃ³n"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/primaryColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="HABILIDADES REQUERIDAS"
                android:textColor="@color/primaryColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spHabilidaad1EAO"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:spinnerMode="dialog"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/primaryColor"
                android:entries="@array/Habilidades"
                android:textColor="@color/primaryColor"
                />

            <Spinner
                android:id="@+id/spHabilidaad2EAO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/Habilidades"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/primaryColor" />

            <Spinner
                android:id="@+id/spHabilidaad3EAO"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/Habilidades"
                android:backgroundTint="@color/primaryColor"
                android:textColor="@color/primaryColor" />

            <Button
                android:id="@+id/btnActualizarEAO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/btnredondeado"
                android:textColor="@color/white"
                android:text="ACTUALIZAR" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>