<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Login"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="405dp"
        android:layout_height="707dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIniSesion"

                android:layout_width="252dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="30dp"
                android:text="Iniciar sesión"
                android:textColor="@color/primaryColor"
                android:textSize="40sp"
                android:textStyle="bold"
                />
            <EditText
                android:id="@+id/edtDni"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:inputType="number"
                android:padding="8dp"
                android:hint="Número de DNI"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor"

                />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textColor="@color/primaryColor"
                android:textColorHint="@color/primaryColor" />


            <TextView
                android:id="@+id/txtOlvidaste"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="¿Olvidaste la Contraseña?"
                android:textColor="@color/primaryColor"
                android:onClick="llamarOlvidePass"

                ></TextView>

            <Button
                android:id="@+id/btnIngresar"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:background="@drawable/btnredondeado"
                android:text="Ingresar"
                />


            <Button
                android:id="@+id/btnIniciarGmail"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/btnredondeado2"
                android:padding="10dp"
                android:text="Ingresar con gmail"
                android:drawableEnd="@drawable/google"
                android:textColor="@color/primaryColor" />


            <View
                android:id="@+id/Separador"
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                />


            <TextView
                android:id="@+id/txtEresNuevo"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="¿Eres nuevo?"
                android:textColor="@color/primaryColor"
                android:textSize="15sp"
                android:layout_weight="0.1"

                />

            <Button
                android:id="@+id/btnCrearCuenta"

                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="50dp"
                android:textColor="@color/white"
                android:layout_weight="0.1"
                android:background="@drawable/btnredondeado"
                android:text="Crear Cuenta" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>