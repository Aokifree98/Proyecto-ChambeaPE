<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AnuncioOfertaTrabajo">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="CREAR OFERTA DE TRABAJO"
        android:background="@color/btnBackgraund"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="32dp"
                android:text="TIPO SERVICIO"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spAOTServicio"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/textColor"
                android:entries="@array/categoriaServicio"
                android:textColor="@color/textColor" />

            <EditText
                android:id="@+id/edtAOTTituloOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_service"
                android:ems="10"
                android:hint="Titulo Ofertar"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/edtColorgris"
                android:textColorHint="@color/textColor"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtAOTDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_direction"
                android:ems="10"
                android:hint="DirecciÃ³n"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:textColor="@color/edtColorgris"
                android:textColorHint="@color/textColor"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="HABILIDADES REQUERIDAS"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spAOTHabilidaad1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:spinnerMode="dialog"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:backgroundTint="@color/textColor"
                android:entries="@array/Habilidades"
                android:textColor="@color/edtColorgris"
                android:prompt="@string/habilidades"/>

            <Spinner
                android:id="@+id/spAOTHabilidaad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/Habilidades"
                android:backgroundTint="@color/textColor"
                android:textColor="@color/edtColorgris" />

            <Spinner
                android:id="@+id/spAOTHabilidaad3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:entries="@array/Habilidades"
                android:backgroundTint="@color/textColor"
                android:textColor="@color/edtColorgris" />

            <TextView
                android:id="@+id/txtMultimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:text="MULTIMEDIA"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">


                <ImageButton
                    android:id="@+id/imgbAOTFoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:src="@drawable/ic_camera"
                    android:background="@color/white"/>

                <ImageButton
                    android:id="@+id/imgbAOTVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:background="@color/white"
                    android:src="@drawable/ic_video"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnAOTCrear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btnbackgraund1"
                android:onClick="crearAOT"
                android:text="CREAR" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>