<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.CrearUsusario">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteX="-15dp"
        tools:layout_editor_absoluteY="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:text="Crear Cuenta"
                android:textColor="@color/primaryColor"
                android:textSize="40sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCCNombres"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Nombres"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor" />

            <EditText
                android:id="@+id/edtCCApellidos"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Apellidos"
                android:inputType="textPersonName"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fecha Naciemiento"
                        android:textColor="@color/primaryColor" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="25dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edtCCFechaNc"
                            android:layout_width="120dp"
                            android:layout_height="50dp"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="yyyy/mm/dd"
                            android:inputType="date"
                            android:textColor="@color/primaryDarkColor"
                            android:textColorHint="@color/primaryDarkColor" />

                        <ImageButton
                            android:id="@+id/btnCCCalendario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#FFFFFF"
                            android:contentDescription="Ingresar para elegir fecha"
                            android:onClick="llamar_Calendario"
                            app:srcCompat="@drawable/ic_calendar" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:text="Genero"
                            android:textColor="@color/primaryColor" />

                        <RadioButton
                            android:id="@+id/rbCCFemenino"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:text="Femenino"
                            android:buttonTint ="@color/primaryColor"
                            android:textColor="@color/primaryColor" />

                        <RadioButton
                            android:id="@+id/rbCCMasculino"
                            android:layout_width="130dp"
                            android:layout_height="21dp"
                            android:buttonTint="@color/primaryColor"
                            android:text="Masculino"
                            android:textColor="@color/primaryColor" />

                        <RadioButton
                            android:id="@+id/rbCCOtro"
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:buttonTint ="@color/primaryColor"
                            android:textColor="@color/primaryColor"
                            android:text="Otro"/>
                    </RadioGroup>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:text="Tipo de documento"
                android:textColor="@color/primaryColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spCCTipoID"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:contentDescription="Seleccionar Tipo de ID"
                    android:textColor="@color/primaryColor"
                    android:backgroundTint ="@color/primaryColor" />

                <EditText
                    android:id="@+id/edtCCTipoID"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Documento de identidad"
                    android:inputType="textPersonName"
                    android:textColor="@color/primaryDarkColor"
                    android:textColorHint="@color/primaryDarkColor" />

            </LinearLayout>

            <EditText
                android:id="@+id/edtCostraseña"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_password"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="@color/primaryDarkColor"
                android:padding="8dp"
                android:textColorHint="@color/primaryDarkColor"/>

            <EditText
                android:id="@+id/edtCCcelular"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="16dp"
                android:ems="10"
                android:hint="Celular"
                android:inputType="phone"
                android:textColor="@color/primaryDarkColor"
                android:padding="8dp"
                android:textColorHint="@color/primaryColor"/>


            <Button
                android:id="@+id/btnCCRegistrar"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/btnredondeado"
                android:text="Registrar"
                android:onClick="registrar_usuario"/>

            <Button
                android:id="@+id/btnCCRegGoogle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginStart="32dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/btnredondeado2"
                android:drawableStart="@drawable/google"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:text="Registrar con Google"
                android:textColor="@color/primaryColor"
                android:textSize="19sp"
                android:textStyle="bold"
                android:onClick="registrar_google"/>

            <TextView
                android:id="@+id/txtCCIngresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Ya tiene una cuenta? Ingresar"
                android:textAlignment="center"
                android:textColor="@color/primaryColor"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>