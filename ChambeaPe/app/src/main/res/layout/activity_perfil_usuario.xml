<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PerfilUsuario">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btnredondeado"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgPerfilUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_user" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"

                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtNombreUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Miguel Castillo Perez"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/txtDireccionUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="El Tambo, Huancayo"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:id="@+id/lyPuntuaciÃ³n"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/igEstrella1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/igEstrella2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/igEstrella3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/igEstrella4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star" />

                    <ImageView
                        android:id="@+id/igEstrella5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_star" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/imgNotifUser"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="0dp"

                android:src="@drawable/ic_bell"
                android:onClick="mostrarNotificaciones"/>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingHorizontal="10dp">

        <Button
            android:id="@+id/btnEditPerfi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btnredondeado"
            android:drawableEnd="@drawable/ic_edit"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:text="Editar"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btnRedesSoci"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:drawableEnd="@drawable/ic_social_networks"
            android:background="@drawable/btnredondeado"
            android:text="Mis redes"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/btnContactarUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:drawableEnd="@drawable/ic_phone"
            android:background="@drawable/btnredondeado"
            android:textColor="@color/white"
            android:text="Contactar" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Mis Anuncios de trabajo"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btnAgregarOferta"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Agregar oferta de trabajo"
                android:textColor="@color/white"
                android:background="@drawable/btnredondeado"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/lstAnunciosOferta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </ScrollView>
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="Mis Anuncios como trabajador"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:textSize="25sp" />
            <Button
                android:id="@+id/btnAgregarTrabajador"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Agregar perfil como trabajador"
                android:textColor="@color/white"
                android:background="@drawable/btnredondeado"/>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ListView
                    android:id="@+id/rclListaTrabajador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"/>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>