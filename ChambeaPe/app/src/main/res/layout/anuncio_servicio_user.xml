<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/crdvAnuncioServicio"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20dp"
    android:layout_gravity="center_horizontal"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@color/btnBackgraund">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txtServicioUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ELECTRICISTA"
            android:textSize="16sp"
            android:layout_gravity="center"
            ></TextView>

        <ImageView
            android:id="@+id/imgPerfServi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_edit_perfil" />

        <TextView
            android:id="@+id/txtDescriServiUser"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Soy un electricista con 5 aÃ±os de experiencia"></TextView>
    </LinearLayout>

</androidx.cardview.widget.CardView>